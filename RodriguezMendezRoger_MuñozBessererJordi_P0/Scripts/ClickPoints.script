go.property("clicks", 0)
go.property("dt", 0)
go.property("maxDt", 1)

function update(self, dt)
	self.dt = self.dt + dt
	label.set_text("#PointClicks","CLICKS LINKED: "..self.clicks)
	if self.dt > self.maxDt then 		
		self.clicks = 0
	end
end

function on_message(self, message_id, message, sender)
	if message_id == hash("clicked") then 
		self.clicks = self.clicks + 1;
		self.dt = 0
	end
end